@{
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        document.title = 'Books';
    });
</script>

<div class="page-header">
    <h1>
        Books Detail
    </h1>
</div>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <form class="form-horizontal center-block" id="frmBooksDetail">
            <div class="row">
                <div class="col-xs-12 col-sm-6 pl-2 pr-2">
                    <div class="widget-box">
                        <div class="widget-header">
                            <h4 class="widget-title">Books Detail</h4>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right" for="txtBookName">Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="txtBookName" placeholder="Book Name" />
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right" for="txtAuther">Auther</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="txtAuther" placeholder="Ex. Smith" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="center">
                        <button class="btn btn-success" type="submit">
                            <i class="ace-icon fa fa-save"></i>
                            Confirm & Save
                        </button>
                        <a class="btn  btn-inverse" href="/client/Books">
                            <i class="ace-icon fa fa-arrow-left"></i>
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/js/Page/Books/BookDetail.js?v=@Utility.GlobalVars.siteVersion"></script>