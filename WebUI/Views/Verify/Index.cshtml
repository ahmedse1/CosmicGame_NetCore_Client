@using Utility;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Verification | Cosmic Game</title>
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link href="~/lib/jquery-toast-plugin/jquery.toast.min.css" rel="stylesheet" />
    <!-- text fonts -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/css/ace.min.css" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="dist/css/ace-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/css/ace-rtl.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body>
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-12 col-xs-12 ">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 col-xs-12  widget-box">
                        <div class="center widget-header widget-header-flat widget-header-small">
                            <h4 class="widget-title lighter">Email Verification</h4>
                        </div>
                        <div class="widget-main">
                            <div class="center">
                                <p>
                                    <h5>
                                       @ViewBag.message
                                    </h5>
                                </p>
                                <hr />
                                <div>
                                    <a href="@GlobalVars.SiteUrl" class="btn btn-primary" id="btnverify">Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
  
</body>
</html>
